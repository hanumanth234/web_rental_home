<%- layout("layouts/boilerplate.ejs")%>
<div class="row mt-3">
    <h2 class="col-6 offset-3 ">login for airbnb</h2>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation"  autocomplete="off" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input name="username" class="form-control" placeholder="Enter username" type="text" id="username" required>
            </div>
                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input name="password" class="form-control" placeholder="Enter password" type="password" id="password" required>
                </div>  
                <button class="btn btn-success">login</button>  
        </form>
    </div>
    </div>
<%- layout("layouts/boilerplate.ejs")%>
<div class="row mt-3">
    <h2 class="col-6 offset-3 ">signup for airbnb</h2>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input name="username" class="form-control" placeholder="Enter username" type="text" id="username" required>
                <div class="valid-feedback">looks good</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input name="email" class="form-control" placeholder="Enter email"  id="email" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input name="password" class="form-control" placeholder="Enter password" type="password" id="password" required>
                </div>  
                <button class="btn btn-success">Signup</button>  
        </form>
    </div>
    </div>